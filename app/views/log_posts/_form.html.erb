<%= form_for(@log_post) do |f| %>
  <% if @log_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@log_post.errors.count, "error") %> prohibited this log_post from being saved:</h2>

      <ul>
      <% @log_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, class: 'form-control', autocomplete: "on", id: "city_search_field" %>
  </div>
  <div class="field form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => "form-control tinymce", :rows => 20, :cols => 30 %>
    <%= tinymce %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places" type="text/javascript"></script>
<script type="text/javascript">
    var autocomplete;
    var place;
    function initialize()
    {
      var options       = {types: ['(cities)']};
      var input         = document.getElementById('city_search_field');
      autocomplete  = new google.maps.places.Autocomplete(input, options);
      google.maps.event.addListener(autocomplete, 'place_changed', function() {
        $('#city_search_field').val(autocomplete.getPlace().name);
      });
    }

    google.maps.event.addDomListener(window, 'load', initialize);
</script>
