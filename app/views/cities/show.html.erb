<h1><%= @city.name %></h1>

<%= image_tag @image_path, {height: 300} %>

<%= @log_posts.each_with_index do |post, index| %>
  <%= div_for(post, class:"log-post") do %>
  <%= gravatar_for @users[index] %>
  <%= post.updated_at %>
  <%= link_to post.title, post %>
  <%= post.body %>
  <%= button_to "Edit", edit_log_post_path(post), method: :get %>
  <%= button_to "Delete", post,  method: :delete,
      data: { confirm: "Are you sure?" } %>
  <% end %>
<% end %>
