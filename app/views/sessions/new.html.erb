<div id="main-container" class="container">

  <div class="row"> <!-- hero image -->
    <div id="hero-image" class="col-md-6 col-md-offset-3">
      <iframe src="https://player.vimeo.com/video/71319358?autoplay=1&title=0&byline=0&portrait=0&badge=0"
      width="555" height="312" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </div>
  </div> <!-- -- hero image  -->

  <div class="row"> <!-- login -->
    <div class="form-signin col-md-6 col-md-offset-3" >
      <%= form_for @user, url: "/sessions", method: "post"  do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.submit "Sign In", class: "btn btn-large btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>  <!-- login -->

  <div class="row"> <!-- signup -->
    <div class="sign-up col-md-6 col-md-offset-3">
      <h4>Don't have an account? <%= link_to "Sign Up!", "/users/new" %> </h4>
    </div>
  </div> <!-- signup -->
</div>
